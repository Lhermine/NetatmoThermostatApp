                        "value_type": "float",
                        "ignore_errors": 3,
                        "RAW_URL": "http://localhost/script/?exec=netatmo_thermostat_oauth.php&oauth_code=[VAR1]&[VAR2]",
                        "RAW_XPATH": "/netatmo/temperature",
